@model BancaTcc.Models.Semestre
@{
    ViewBag.Title = "CreateSemestre";
}

<h2>Adicionar Semestre</h2>

<div class="panel">
    <form action="~/Semestre/CreateSemestre" method="post">
        <div class="form-group">
            <label>Id</label>
            <input class="form-control" type="number" id="Id" name="Id" placeholder="Identificador do Semestre" />
        </div>

        <div class="form-group">
            <label>Nome</label>
            <input class="form-control" type="text" id="Nome" name="Nome" placeholder="Nome do Semestre" />
        </div>

        <button type="submit" class="btn btn-default">Cadastrar Semestre</button>
    </form>
</div>