@model IEnumerable<BancaTcc.Models.Semestre>
    @{
    ViewBag.Title = "Semestre";
    }

    <h2>Semestre</h2>

    <a class="btn btn-primary" href="~/Semestre/CreateSemestre">Adicionar Semestre</a>
    <table class="table table-responsive table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Id</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
        <tr>
            <th>@item.Nome</th>
            <th>@item.Id</th>
            <th><a class="btn btn-warning" href="~/Semestre/UpdateSemestre/@item.Id">Atualizar</a></th>
            <th><a class="btn btn-danger" href="~/Semestre/DeleteSemestre/@item.Id">Deletar</a></th>
        </tr>
        }
    </table>
