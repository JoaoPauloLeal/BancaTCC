@model BancaTcc.Models.Aluno
@{
    ViewBag.Title = "UpdateAluno";
}

<h2>UpdateAluno</h2>
<div class="panel">
    <form action="~/Aluno/UpdateAluno" method="post">
        <div class="form-group">
            <label>Id</label>
            <input class="form-control" type="number" id="Id" name="Id" value="@Model.Id"/>
        </div>

        <div class="form-group">
            <label>Nome</label>
            <input class="form-control" type="text" id="Nome" name="Nome" value="@Model.Nome"/>
        </div>

        <button type="submit" class="btn btn-default">Atualizar Aluno</button>
    </form>
</div>